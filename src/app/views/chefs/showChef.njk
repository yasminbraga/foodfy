{% extends '../layout.njk' %}

{% block content %}
<div class="page-content">
  <div class="chef-header">
    <p>Chef: {{ chef.name }}</p>
    <a class="button" href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
  </div>

  <div class="chef-info">
    <img src="{{chefAvatar.src}}" alt="{{chefAvatar.name}}">
    <h1>{{chef.name}}</h1>
    <p>4 receitas</p>
  </div>

  <div class="chef-recipes">
  <h2>Receitas</h2>
  
  </div>
</div>

{% endblock content %}
