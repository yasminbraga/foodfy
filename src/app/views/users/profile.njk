{% extends "../layout.njk" %}

{% block content %}
<section class="form">
  <form method="POST" action="/admin/users/profile?_method=PUT" id="form-edit">
    <div class="form-header">
      <p>Bem vindo, {{user.name}}</p>
      <div class="form-buttons">
        <button class="button save" type="submit" form="form-edit">Salvar</button>
      </div>
    </div>
      {% include "users/profile-fields.njk" %}
      <input 
        type="hidden"
        name="id"
        value={{user.id}}
      >
  </form>
</section>
{% endblock %}