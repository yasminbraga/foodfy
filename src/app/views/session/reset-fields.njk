<div class="item user-item">
  <p>Email</p>
  <div>
    <input 
      type="email"
      name="email"
      placeholder="Digite seu email"
      value="{{ user.email }}"
      onblur="Validate.apply(this, 'isEmail')"
    >
  </div>
</div>

<div class="item user-item">
  <p>Nova senha</p>
  <div>
    <input 
      type="password"
      name="password"
      placeholder="Digite sua nova senha"
    >
  </div>
</div>

<div class="item user-item">
  <p>Repetir senha</p>
  <div>
    <input 
      type="password"
      name="passwordRepeat"
      placeholder="Repita a nova senha"
    >
  </div>
</div>

<input type="hidden" name="token" value="{{token}}">