{% extends './layout.njk' %}

{% block content %}
<section class="password form">
  <form action="/users/forgot-password" method="POST">
    <div class="login-header">
      <h2>Esqueceu a senha?</h2>
    </div>

    <div class="fields">
      <div class="item user-item">
        <p>Email</p>
        <div>
          <input 
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          >
          </div>
        </div>
    </div>

    <div class="forgot-password-footer">
      <button class="button save" type="submit">Recuperar</button>
    </div>

  </form>
</section>


{% endblock %}